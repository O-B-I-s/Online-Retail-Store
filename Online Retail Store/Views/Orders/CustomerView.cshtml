@model IEnumerable<Online_Retail_Store.Models.Order>

@{
    ViewBag.Title = "My Orders";
}

<h2>My Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>@order.Status</td>
                <td>
                    @Html.ActionLink("View Details", "OrderDetails", new { id = order.OrderId })
                </td>
            </tr>
        }
    </tbody>
</table>
